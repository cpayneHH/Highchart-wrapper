{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    // Use "ESNext" for best compatibility with modern tooling
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    // Keep these for aliases
    "paths": {
      "@mocks/*": [
        "tests/mocks/*"
      ],
      "@types": [
        "src/types.ts"
      ],
      "@components/*": [
        "src/components/*"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    // <== Include your test files (needed for MSW types, etc.)
    "vitest.config.ts"
    // Optional but helpful for intellisense
  ]
}
