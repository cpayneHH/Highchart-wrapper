{
  "compilerOptions": {
    // Emit declarations only, into dist/
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    // Target modern JS so you get flatMap, etc.
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    // Use native ESM and Node-style resolution for `import 'vue'`
    "module": "es6",
    "moduleResolution": "node",

    // Allow default-import interop and skip checking @types for speed
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
